#!/usr/bin/env bash

# Track applications exposed via OOD
# Comment this line if not needed.
# /shared/monitoring/scripts/ood_apps_mon.sh $USER EESSI_application_list

# Determine the directory where this script is located
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

# Activate the virtual environment
source $SCRIPT_DIR/../python-venv/bin/activate

# Execute Python using the virtual environment
exec /bin/env python3 "$@"

